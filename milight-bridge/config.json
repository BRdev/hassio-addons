{
  "name": "Milight Bridge",
  "version": "1.0.0",
  "slug": "milight-bridge",
  "description": "Control your milight lights using this NodeJS application.",
  "url": "https://github.com/BRdev/hassio-addons/tree/master/milight-bridge",
  "webui": "http://[HOST]:[PORT:3000]",
  "arch": [
    "armhf",
    "amd64"
  ],
  "map": [
    "share:rw",
    "ssl"
  ],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "options": {
    "serverip": null,
    "serverport": 3000,
    "version": "latest"
  },
  "schema": {
    "serverip": "str",
    "serverport": "int",
    "version": "str"
  }
}
